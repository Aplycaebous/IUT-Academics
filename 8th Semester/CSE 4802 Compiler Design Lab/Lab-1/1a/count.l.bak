%{
// declaration
int wc = 0;	//word counter
int nc = 0;	//number counter
int cc = 0;	//total character counter
%}

%%
[\t ]+       ;
[a-zA-Z]+     {wc++;cc+=yyleng;}
[+-]?([0-9]*[.])?[0-9]+ {nc++;cc+=yyleng;}
. {cc+=yyleng;}

%%
// Subroutines
int main()
{
printf("Enter a string: ");
yylex();
printf("Words: %d, Numbers: %d, Characters: %d", wc,nc, cc);
}

int yywrap() { return 1; }
